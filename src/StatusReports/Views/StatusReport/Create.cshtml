@model StatusReports.Models.IndividualStatusReport

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>IndividualStatusReport</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PersonId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{ var people = (IEnumerable<SelectListItem>)ViewData["PersonId"]; }
                <select asp-for="PersonId" asp-items="people" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProjectId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{ var projects = (IEnumerable<SelectListItem>)ViewData["ProjectId"]; }
                <select asp-for="ProjectId" asp-items="projects" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WeekId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{ var week = (IEnumerable<SelectListItem>)ViewData["WeekId"]; }
                <select asp-for="WeekId" asp-items="week" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
