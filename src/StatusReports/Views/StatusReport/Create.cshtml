@model StatusReports.Models.IndividualStatusReport

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Add New Status Report</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-4">
                <label asp-for="PersonId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    @{ var people = (IEnumerable<SelectListItem>)ViewData["PersonId"]; }
                    <select asp-for="PersonId" asp-items="people" class="form-control"></select>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ProjectId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    @{ var projects = (IEnumerable<SelectListItem>)ViewData["ProjectId"]; }
                    <select asp-for="ProjectId" asp-items="projects" class="form-control"></select>
                </div>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="WeekId" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    @{ var week = (IEnumerable<SelectListItem>)ViewData["WeekId"]; }
                    <select asp-for="WeekId" asp-items="week" class="form-control"></select>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="list-group statusTable col-sm-12">
                <div class="row list-group-item active">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-2 text-center"><strong>Hours</strong></div>
                    <div class="col-sm-8 text-center"><strong>Work Description</strong></div>
                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Saturday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[0].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[0].WorkDescription" placeholder="description"></textarea>
                    </div>
                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Sunday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[1].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[1].WorkDescription" placeholder="description"></textarea>
                    </div>
                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Monday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[2].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[2].WorkDescription" placeholder="description"></textarea>
                    </div>

                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Tuesday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[3].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[3].WorkDescription" placeholder="description"></textarea>
                    </div>

                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Wednesday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[4].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[4].WorkDescription" placeholder="description"></textarea>
                    </div>
                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Thursday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[5].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[5].WorkDescription" placeholder="description"></textarea>
                    </div>
                </div>
                <div class="row list-group-item">
                    <label class="col-sm-2 control-label">
                        Friday
                    </label>
                    <div class="col-sm-2">
                        <input placeholder="hours" name="IndividualStatusItems[6].Hours" class="text-center form-control" />
                    </div>
                    <div class="col-sm-8">
                        <textarea class="form-control" name="IndividualStatusItems[6].WorkDescription" placeholder="description"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="row form-group">
            <div class="row text-center">
                <input type="submit" value="Save As Draft" class="btn btn-primary" />
                <input type="submit" value="Submit To PM" class="btn btn-danger" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
