@model IEnumerable<StatusReports.Models.IndividualStatusItem>

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>
<div class="developerDetails">
    <table class="table table-striped">
        <tr>
            <th>Day</th>
            <th>Hours</th>
            <th>Work Description</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr @Url.Action("Edit","IndividualStatusItems", new { id= item.IndividualStatusReportId})>
                <td class="col-sm-6 col-md-4">@item.Date</td>
                <td class="col-sm-6 col-md-4">@item.Hours</td>
                <td class="col-sm-12 col-md-4">@item.WorkDescription</td>
                <td><a href="@Url.Action("Create", "IndividualStatusItems", new { item.Id, item.IndividualStatusReportId })">Create</a></td>
                <td><a href="@Url.Action("Edit", "IndividualStatusItems", new { item.Id, item.IndividualStatusReportId })">Edit</a></td>
                <td><a href="@Url.Action("Submit", "IndividualStatusItems", new { item.Id, item.IndividualStatusReportId })">Submit</a></td>
            </tr>
        }
    </table>


</div>

